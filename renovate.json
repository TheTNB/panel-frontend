{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "commitMessagePrefix": "chore(deps): ",
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "ignoreDeps": [
    "eslint"
  ],
  "packageRules": [
    {
      "description": "Automerge updates",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
